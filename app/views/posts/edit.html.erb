<h1>Editando Postagem</h1>

<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit "Salvar Alterações" %>
  </div>
<% end %>

<p><%= link_to "Voltar para a postagem", @post %></p>
